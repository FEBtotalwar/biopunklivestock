      <texPath>Things/Plants/Wiltgrass</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
	  <fertilityMin>0.5</fertilityMin>
	  <fertilitySensitivity>0.3</fertilitySensitivity>
	  <growDays>4</growDays>
      <immatureGraphicPath>Things/Plants/Wiltgrass_Immature</immatureGraphicPath>
	  <sowWork>250</sowWork>
      <dieIfLeafless>true</dieIfLeafless>
      <maxMeshCount>4</maxMeshCount>
      <harvestTag>Standard</harvestTag>
	  <pollution>PollutedOnly</pollution>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.6~0.8</visualSizeRange>
	  <sowTags>
        <li>Ground</li>
      </sowTags>
      <wildOrder>1</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>
