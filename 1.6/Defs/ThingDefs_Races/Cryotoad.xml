<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	
	<ThingDef ParentName="AnimalThingBase">
    <defName>FEB_CryoToad</defName>
    <label>cryotoad</label>
    <description>A heavily modified giant toad. Complex metabolic process makes this creature absorb heat from surrounding objects. Cryotoads thrive in cool, forested environments. Sometimes kept indoors by pre-industrial communities to refrigirate food. Require regular intake of psychite when in captivity.</description>
    <statBases>
      <MoveSpeed>3.2</MoveSpeed>
      <MarketValue>220</MarketValue>
      <ComfyTemperatureMin>-65</ComfyTemperatureMin>
      <ComfyTemperatureMax>22</ComfyTemperatureMax>
      <Wildness>0.25</Wildness>
      <ToxicResistance>0</ToxicResistance>
    </statBases>
    <tools>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
	<comps>
	<li Class="CompProperties_HeatPusher">
		<compClass>CompHeatPusher</compClass>
		<heatPerSecond>-3</heatPerSecond>
		<heatPushMinTemperature>-3</heatPushMinTemperature>
	</li>
	<li Class="VEF.AnimalBehaviours.CompProperties_InitialHediff">
		<hediffname>PsychiteAddiction</hediffname>
		<hediffseverity>0.5</hediffseverity>
	</li>
	</comps>
    <race>
      <body>QuadrupedAnimalWithPaws</body>
      <baseBodySize>0.8</baseBodySize>
      <baseHungerRate>0.2</baseHungerRate>
      <baseHealthScale>0.8</baseHealthScale>
      <foodType>OmnivoreRoughAnimal</foodType>
      <leatherDef>Leather_Light</leatherDef>
      <trainability>Intermediate</trainability>
      <gestationPeriodDays>5.661</gestationPeriodDays>
      <soundEating>Reptile_Eat</soundEating>
      <lifeExpectancy>8</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.1</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.2222</minAge>
          <soundWounded MayRequire="Ludeon.RimWorld.Odyssey">Pawn_Frog_Wounded</soundWounded>
          <soundDeath MayRequire="Ludeon.RimWorld.Odyssey">Pawn_Frog_Death</soundDeath>
          <soundCall MayRequire="Ludeon.RimWorld.Odyssey">Pawn_Frog_Call</soundCall>
          <soundAngry MayRequire="Ludeon.RimWorld.Odyssey">Pawn_Frog_Angry</soundAngry>
        </li>
      </lifeStageAges>
	  <wildBiomes>
			<Tundra>0.1</Tundra>
			<BorealForest>0.12</BorealForest>
			<ColdBog>0.12</ColdBog>
			<TemperateForest>0.07</TemperateForest>
			<TemperateSwamp>0.07</TemperateSwamp>
			<GlacialPlain MayRequire="Ludeon.RimWorld.Odyssey">0.12</GlacialPlain>
	  </wildBiomes>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
      <headPosPerRotation>
        <li>(0.0, 0, 0.2)</li>
        <li>(0.33, 0, 0.03)</li>
        <li>(0.0, 0, -0.28)</li>
        <li>(-0.33, 0, 0.03)</li>
      </headPosPerRotation>
    </race>
    <tradeTags>
      <li>AnimalExotic</li>
    </tradeTags>
  </ThingDef>

