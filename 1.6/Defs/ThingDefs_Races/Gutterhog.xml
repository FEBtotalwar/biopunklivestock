        <li MayRequire="Ludeon.RimWorld.Odyssey">Forage</li>
      </specialTrainables>
      <meatLabel>gutterpork</meatLabel>
      <gestationPeriodDays>5.661</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(1.7, 1)</li>
          <li>(2.0, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>12</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.1</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.3333</minAge>
          <soundWounded>Pawn_Wildboar_Wounded</soundWounded>
          <soundDeath>Pawn_Wildboar_Death</soundDeath>
          <soundCall>Pawn_Wildboar_Call</soundCall>
          <soundAngry>Pawn_Wildboar_Angry</soundAngry>
