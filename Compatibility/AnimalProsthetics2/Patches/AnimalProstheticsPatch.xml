<?xml version="1.0" encoding="utf-8"?>

<Patch>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/RecipeDef[
			@Name="ADS_Cat3" or
			@Name="ADS_Cat2" or
			@Name="ADS_Cat1"
			]/recipeUsers</xpath>
		<value>
			<li>FEB_Toxoga</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/RecipeDef[
			@Name="ADS_Cat2" or
			@Name="ADS_Cat1"
			]/recipeUsers</xpath>
		<value>
			<li>FEB_Ferrohorn</li>
			<li MayRequire="Ludeon.RimWorld.Biotech">FEB_Leadbelly</li>
			<li>FEB_Apotheca</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/RecipeDef[
			@Name="ADS_Cat1"
			]/recipeUsers</xpath>
		<value>
			<li>FEB_Cottonfoot</li>
			<li>FEB_CryoToad</li>
			<li>FEB_Gutterhog</li>
		</value>
	</Operation>

</Patch>
